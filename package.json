{
  "name": "app-name",
  "productName": "App Name",
  "version": "0.1.9",
  "description": "Description",
  "keywords": [],
  "author": {
    "name": "Author",
    "email": "author@domain.com"
  },
  "license": "ISC",
  "repository": "panosoft/electron-boilerplate",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "test": "npm run test:main && npm run test:renderer",
    "test:main": "electron-mocha test/main",
    "test:renderer": "electron-mocha --renderer test/renderer",
    "test:integration": "mocha test/integration",
    "pack": "electron-packager . --platform=win32 --arch=all --out=dist --overwrite --prune --app-version=$npm_package_version  --asar --osx-sign.identity='Alexandre Gigliotti'",
    "dmg": "appdmg .appdmg.json \"dist/$npm_package_productName-darwin-x64/$npm_package_productName-$npm_package_version.dmg\"",
    "zip": "cd \"dist/$npm_package_productName-darwin-x64\"; zip --recurse-paths --quiet \"$npm_package_productName-$npm_package_version-mac.zip\" \"$npm_package_productName.app\"",
    "build": "npm run pack && npm run dmg && npm run zip",
    "build:win": "node tasks/build-win.js",
    "publish": "publish-release --token=$GITHUB_TOKEN --owner=panosoft --repo=electron-boilerplate --tag=$npm_package_version --name=$npm_package_version --notes=$npm_package_version --reuseRelease --assets \"dist/$npm_package_productName-darwin-x64/$npm_package_productName-$npm_package_version.dmg,dist/$npm_package_productName-darwin-x64/$npm_package_productName-$npm_package_version-mac.zip\"",
    "release:patch": "npm run build && npm run test && npm version patch && git push && npm run publish"
  },
  "dependencies": {},
  "devDependencies": {
    "appdmg": "^0.4.3",
    "bestzip": "^1.1.3",
    "chai": "^3.5.0",
    "devtron": "^1.1.2",
    "electron-mocha": "^2.0.0",
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^1.0.2",
    "electron-winstaller": "^2.3.0",
    "mocha": "^2.4.5",
    "publish-release": "^1.3.0",
    "spectron": "^3.1.0"
  }
}
