{
  "name": "app-name",
  "productName": "App Name",
  "version": "0.1.18",
  "description": "Description",
  "keywords": [],
  "author": {
    "name": "Author",
    "email": "author@domain.com"
  },
  "license": "ISC",
  "repository": "panosoft/electron-boilerplate",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "test:main": "electron-mocha test/main",
    "test:renderer": "electron-mocha --renderer test/renderer",
    "test:integration": "mocha test/integration",
    "test": "npm run test:main && npm run test:renderer && npm run test:integration",
    "clean": "rm -rf dist/applications/* dist/packages/*",
    "build": "electron-packager . --platform=darwin --arch=all --out=dist/applications --overwrite --prune --app-version=$npm_package_version  --asar --osx-sign.identity='Alexandre Gigliotti'",
    "dmg": "FILE=\"dist/packages/$npm_package_name-$npm_package_version.dmg\"; rm \"$FILE\"; appdmg .appdmg.json \"$FILE\"",
    "zip": "cd \"dist/applications/$npm_package_productName-darwin-x64\"; FILE=\"../../packages/$npm_package_name-$npm_package_version-mac.zip\"; rm \"$FILE\"; zip --recurse-paths --quiet \"$FILE\" \"$npm_package_productName.app\"",
    "pack:mac": "npm run dmg && npm run zip",
    "pack:win": "node tasks/pack-win.js",
    "pack": "npm run pack:mac && npm run pack:win",
    "publish": "publish-release --token=$GITHUB_TOKEN --owner=panosoft --repo=electron-boilerplate --tag=$npm_package_version --name=$npm_package_version --notes=$npm_package_version --reuseRelease --assets \"dist/packages/$npm_package_name-$npm_package_version.dmg,dist/packages/$npm_package_name-$npm_package_version-mac.zip,dist/packages/$npm_package_name-setup-$npm_package_version.exe,dist/packages/$npm_package_name-$npm_package_version-full.nupkg,dist/packages/RELEASES\"",
    "release:patch": "npm run test && npm version patch && git push --follow-tags && npm run clean && npm run build && npm run pack && npm run publish"
  },
  "dependencies": {
    "electron-is-dev": "^0.1.1",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "appdmg": "^0.4.3",
    "bestzip": "^1.1.3",
    "chai": "^3.5.0",
    "devtron": "^1.1.2",
    "electron-mocha": "^2.0.0",
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^1.1.1",
    "electron-winstaller": "^2.3.0",
    "mocha": "^2.4.5",
    "publish-release": "^1.3.0",
    "rimraf": "^2.5.2",
    "spectron": "^3.1.0"
  }
}
